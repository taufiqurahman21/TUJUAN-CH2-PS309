<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainpage.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_BG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_test1"
        app:layout_constraintBottom_toTopOf="@+id/CL_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_Top"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layoutDescription="@xml/activity_main_xml_cl_top_scene"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/gradient_bluewhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/IM_icontoplogin"
            android:layout_width="230dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/logo_tujuan"
            android:contentDescription="@string/contentdescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/IM_icontoplogin2"
            android:layout_width="120dp"
            android:layout_height="250dp"
            android:background="@drawable/animasi_cowo_lesuh"
            android:contentDescription="@string/contentdescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/TV_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/mochiepopone"
            android:text="@string/bingun_pilih"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/IM_icontoplogin"
            app:layout_constraintStart_toStartOf="@+id/IM_icontoplogin"
            app:layout_constraintTop_toBottomOf="@+id/IM_icontoplogin" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/TV_titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="165dp"
        android:fontFamily="@font/mochiepopone"
        android:text="@string/apa_itu_tujuan"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/CL_Top"
        app:layout_constraintStart_toStartOf="@+id/CL_mid"
        app:layout_constraintEnd_toEndOf="@+id/CL_mid" />

    <TextView
        android:id="@+id/TV_descrition"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mochiepopone"
        android:layout_marginTop="10dp"
        android:text="@string/description"
        android:textAlignment="textStart"
        android:textColor="@color/orange"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/TV_titleMain"
        app:layout_constraintTop_toBottomOf="@+id/TV_titleMain" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_mid"
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_descrition"
        app:layout_constraintBottom_toTopOf="@+id/buttonMulai">

        <TextView
            android:id="@+id/main_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mochiepopone"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/example_mainoutput"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montaga"
            android:text="@string/example_output2"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/main_Title"
            app:layout_constraintStart_toStartOf="@+id/main_Title" />

        <TextView
            android:id="@+id/tv_finalresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/oleo_script_bold"
            android:text="@string/finalresult"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/tv_result"
            app:layout_constraintTop_toBottomOf="@+id/tv_result" />

        <TextView
            android:id="@+id/tvLine"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_draw"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tv_finalresult"
            app:layout_constraintTop_toBottomOf="@+id/tv_finalresult" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/cowo_sma_img"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="-15dp"
        android:src="@drawable/anak_sma_cowo"
        android:contentDescription="@string/contentdescription"
        app:layout_constraintTop_toTopOf="@+id/CL_mid"
        app:layout_constraintBottom_toBottomOf="@+id/CL_mid"
        app:layout_constraintStart_toStartOf="@+id/CL_mid" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_Button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CL_Buttoninside"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/contentdescription"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/icon_home"
            app:tint="@color/biru_tua"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvicon_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mochiepopone"
            android:text="@string/Home"
            android:textAlignment="textStart"
            android:textColor="@color/biru_tua"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/icon_home"
            app:layout_constraintStart_toStartOf="@+id/icon_home"
            app:layout_constraintEnd_toEndOf="@+id/icon_home" />

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            android:contentDescription="@string/contentdescription"
            android:src="@drawable/icon_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvicon_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mochiepopone"
            android:text="@string/Profile"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/icon_profile"
            app:layout_constraintStart_toStartOf="@+id/icon_profile"
            app:layout_constraintEnd_toEndOf="@+id/icon_profile" />

        <ImageView
            android:id="@+id/icon_history"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_history"
            android:contentDescription="@string/contentdescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/icon_profile"
            app:layout_constraintStart_toStartOf="@+id/icon_home" />

        <TextView
            android:id="@+id/tvicon_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mochiepopone"
            android:text="@string/History"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/icon_history"
            app:layout_constraintStart_toStartOf="@+id/icon_history"
            app:layout_constraintEnd_toEndOf="@+id/icon_history" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/bg_button"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:src="@drawable/border_button_blue"
        android:contentDescription="@string/contentdescription"
        app:layout_constraintTop_toTopOf="@+id/buttonMulai"
        app:layout_constraintStart_toStartOf="@+id/buttonMulai"
        app:layout_constraintEnd_toEndOf="@+id/buttonMulai"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMulai" />

    <Button
        android:id="@+id/buttonMulai"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="@string/mulai"
        android:layout_marginBottom="60dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        android:fontFamily="@font/marko_one"
        app:layout_constraintBottom_toBottomOf="@+id/CL_Button"
        app:layout_constraintStart_toStartOf="@+id/CL_Button"
        app:layout_constraintEnd_toEndOf="@+id/CL_Button" />

</androidx.constraintlayout.widget.ConstraintLayout>