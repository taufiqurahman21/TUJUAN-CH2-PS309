<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionpage.QuestionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_BG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_test1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/IM_icontoplogin"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/logo_tujuan"
        android:contentDescription="@string/contentdescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IM_icontoplogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/CL_Button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_question" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CL_Buttoninside"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/IM_bgbutton"
            android:layout_width="175dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:background="@drawable/border_button"
            android:contentDescription="@string/contentdescription"
            app:layout_constraintStart_toStartOf="@+id/buttonloginkanan"
            app:layout_constraintEnd_toEndOf="@+id/buttonloginkanan"
            app:layout_constraintTop_toTopOf="@+id/buttonloginkanan"
            app:layout_constraintBottom_toBottomOf="@+id/buttonloginkanan" />

        <Button
            android:id="@+id/buttonloginkanan"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/berikutnya"
            android:textSize="14sp"
            android:layout_margin="10dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/buttonloginkanan"
            app:layout_constraintStart_toStartOf="@+id/buttonloginkanan"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
